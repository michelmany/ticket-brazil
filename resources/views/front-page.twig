{% extends "base.twig" %}

{% block content %}

<section class="hero-home section" style="background-image: url('{{ theme.link }}/resources/assets/images/placeholder-hero-01.jpg')">
    
    
    <div class="hero-home__item">
        <div class="container">
            <div class="hero-home__content">
                <div class="hero-home__title has-text-yellow">Rio Carnival</div>
                <div class="hero-home__title has-text-white">Tickets 2019</div>
