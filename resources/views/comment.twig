<div class="blog-comment {{ comment.comment_type }}" id="blog-comment-{{ comment.ID }}">

  <article id="comment-{{ comment.ID }}" class="message is-primary">

    {# Message body #}
    <div class="message-body">
      <div class="columns">
        <div class="column is-2">
          <img src="{{ comment.author.avatar }}"/>
        </div>
        <div class="column">
          <div><strong>{{ comment.author.name }}</strong></div>
          <time class="timestamp">
            <small>{{ comment.date }} {{ comment.time }}</small>
          </time>
          <br/><br/>
          <div>{{ comment.comment_content|wpautop }}</div>

        </div>
      </div>

      {# Message Footer #}
      <footer>
        {{ comment.reply_link('<i class="fa fa-reply" aria-hidden="true"></i> <span>' ~ messages.comment.reply ~ '</span>') }}
      </footer>
    </div>
  </article>
  <section class="comment-box">
    <!-- child comments -->
    {% if post.comments %}
      <div class="comments">
      {% for cmt in comment.children %}
      {% include "comment.twig" with {comment:cmt} %}
      {% endfor %}
    </div>
    {% endif %}

  </section>
</div>
